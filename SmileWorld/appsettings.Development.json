{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "logs/log-{Date}.txt",
          "shared": true,
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {NewLine} ActionName:{ActionName:j} RequestPath:{RequestPath:z} {NewLine}{Exception}",
          "fileSizeLimitBytes": "1048576",
          "retainedFileCountLimit": null
        }
      }
    ]
  },
  "ConnectionString": {
    "BaseDb": "Data Source=.;Initial Catalog=LearunFramework_Base_2017;Integrated Security=True"
  }
}
